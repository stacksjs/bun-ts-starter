{
  "typescript.tsdk": "node_modules/typescript/lib",
  "prettier.enable": false,
  "editor.formatOnSave": false,
  // Enable the ESlint flat config support
  "eslint.experimental.useFlatConfig": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml"
  ],
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  "cSpell.words": [
    "antfu",
    "booleanish",
    "bumpp",
    "bunx",
    "changelogithub",
    "codecov",
    "commitlint",
    "commitlintrc",
    "composables",
    "degit",
    "deps",
    "destructurable",
    "entrypoints",
    "heroicons",
    "openweb",
    "outdir",
    "pausable",
    "prefetch",
    "preinstall",
    "socio",
    "stacksjs",
    "typecheck",
    "unplugin",
    "unref",
    "upath",
    "vite",
    "vitebook",
    "vitejs",
    "vue-demi",
    "vueuse"
  ]
}
